    <style name="Theme.SemiColon.CodeList.Card">

        <item name="android:layout_marginTop">@dimen/codelist_card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/codelist_card_margin_vertical</item>

        <item name="android:elevation">@dimen/card_elevation</item>

    </style>

