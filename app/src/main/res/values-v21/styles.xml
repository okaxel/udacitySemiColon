        <item name="android:background">@color/colorPrimary</item>

        <item name="android:elevation">@dimen/appbar_elevation</item>

    </style>

    <style name="Theme.SemiColon.Main.Card">

        <item name="android:layout_marginLeft">@dimen/main_cards_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/main_cards_margin_horizontal</item>

