<resources>

    <style name="Theme.SemiColon" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.SemiColon.AppBar">

        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="Theme.SemiColon.TabStrip">

        <item name="android:paddingTop">@dimen/tab_strip_margin_vertical</item>
        <item name="android:paddingBottom">@dimen/tab_strip_margin_vertical</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="Theme.SemiColon.Toolbar">

        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <item name="android:textColorSecondary">@color/colorTextLight</item>

    </style>

    <!-- Empty style to have the parent category -->
    <style name="Theme.SemiColon.Main"/>

    <style name="Theme.SemiColon.Main.Card">

        <item name="android:layout_marginLeft">@dimen/main_cards_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/main_cards_margin_horizontal</item>

    </style>

    <style name="Theme.SemiColon.Main.Card.Label">

        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:paddingBottom">@dimen/main_cards_label_padding_after</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_caption_size</item>

    </style>

    <style name="Theme.SemiColon.Main.Card.Title">

        <item name="android:paddingTop">@dimen/main_cards_title_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/main_cards_title_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>

    </style>

    <style name="Theme.SemiColon.Main.Card.Value">

        <item name="android:paddingTop">@dimen/main_cards_value_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/main_cards_value_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.Main.CardNest">

        <item name="android:layout_marginLeft">@dimen/main_cardnest_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/main_cardnest_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/main_cardnest_padding_top</item>

    </style>

    <!-- Empty style to have the parent category -->
    <style name="Theme.SemiColon.CodeList"/>

    <style name="Theme.SemiColon.CodeList.Card">

        <item name="android:layout_marginTop">@dimen/codelist_card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/codelist_card_margin_vertical</item>

    </style>

    <style name="Theme.SemiColon.CodeList.Card.Layout">

        <item name="android:layout_margin">@dimen/codelist_card_layout_margin</item>

    </style>

    <style name="Theme.SemiColon.CodeList.Card.Name">

        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.CodeList.Card.Version">

        <item name="android:textSize">@dimen/text_caption_size</item>

    </style>

    <style name="Theme.SemiColon.CodeList.NoData">

        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_display_2_size</item>
        <item name="android:textColor">@color/colorTextPlaceholder</item>

    </style>

    <style name="Theme.SemiColon.CodeList.Recycler">

        <item name="android:paddingLeft">@dimen/codelist_recycler_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/codelist_recycler_padding_horizontal</item>

    </style>

    <!-- Empty style to have the parent category -->
    <style name="Theme.SemiColon.CodeDetails"/>

    <style name="Theme.SemiColon.CodeDetails.CardNest">

        <item name="android:paddingTop">@dimen/codedetails_cardnest_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/codedetails_cardnest_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/codedetails_cardnest_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/codedetails_cardnest_padding_horizontal</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.ErrorBox">

        <item name="android:paddingTop">@dimen/codedetails_errorbox_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/codedetails_errorbox_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextPlaceholder</item>
        <item name="android:textSize">@dimen/text_headline_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.ErrorBoxLand">

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextPlaceholder</item>
        <item name="android:textSize">@dimen/text_headline_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.InfoFrame">

        <item name="android:paddingLeft">@dimen/codedetails_card_frame_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/codedetails_card_frame_padding_horizontal</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.Label">

        <item name="android:paddingTop">@dimen/codedetails_card_fields_padding_around</item>
        <item name="android:paddingBottom">@dimen/codedetails_card_fields_padding_between</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.Name">

        <item name="android:textSize">@dimen/text_headline_size</item>
        <item name="android:paddingTop">@dimen/codedetails_card_name_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/codedetails_card_name_padding_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.Value">

        <item name="android:paddingTop">@dimen/codedetails_card_fields_padding_between</item>
        <item name="android:paddingBottom">@dimen/codedetails_card_fields_padding_around</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionCard">

        <item name="android:layout_marginTop">@dimen/codedetails_versioncard_margin_top</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionCardLand">

        <item name="android:layout_marginLeft">
            @dimen/codedetails_versioncard_margin_start_landscape
        </item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionLabel">

        <item name="android:layout_marginTop">
            @dimen/codedetails_versioninfo_frame_margin_vertical
        </item>

        <item name="android:layout_marginBottom">
            @dimen/codedetails_versioninfo_subtitle_margin_bottom
        </item>

        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionName">

        <item name="android:textSize">@dimen/text_caption_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionNumber">

        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_caption_size</item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionRecycler">

        <item name="android:layout_marginBottom">
            @dimen/codedetails_versioninfo_frame_margin_vertical
        </item>

    </style>

    <style name="Theme.SemiColon.CodeDetails.VersionTitle">

        <item name="android:layout_marginTop">
            @dimen/codedetails_versioninfo_frame_margin_vertical
        </item>

        <item name="android:layout_marginBottom">
            @dimen/codedetails_versioninfo_frame_margin_vertical
        </item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>

    </style>

    <!-- Empty style to have the parent category -->
    <style name="Theme.SemiColon.Quotes"/>

    <style name="Theme.SemiColon.Quotes.Author">

        <item name="android:paddingTop">@dimen/quote_items_padding_between</item>
        <item name="android:paddingBottom">@dimen/quote_author_padding_bottom</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.Quotes.ButtonsNest">

        <item name="android:paddingTop">@dimen/quotes_buttons_nest_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/quotes_buttons_nest_padding_vertical</item>


    </style>

    <style name="Theme.SemiColon.Quotes.CardNest">

        <item name="android:paddingTop">@dimen/quotes_cardnest_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/quotes_cardnest_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/quotes_cardnest_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/quotes_cardnest_padding_horizontal</item>

    </style>

    <style name="Theme.SemiColon.Quotes.InfoFrame">

        <item name="android:paddingLeft">@dimen/quotes_card_frame_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/quotes_card_frame_padding_horizontal</item>

    </style>

    <style name="Theme.SemiColon.Quotes.ItemAuthor">

        <item name="android:paddingTop">@dimen/quote_items_padding_between</item>
        <item name="android:paddingBottom">@dimen/quote_author_padding_bottom</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.Quotes.ItemLayout">

        <item name="android:paddingLeft">@dimen/quote_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/quote_item_padding_horizontal</item>

    </style>

    <style name="Theme.SemiColon.Quotes.ItemText">

        <item name="android:paddingTop">@dimen/quote_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/quote_items_padding_between</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textSize">@dimen/text_title_size</item>

    </style>

    <style name="Theme.SemiColon.Quotes.Label">

        <item name="android:paddingTop">@dimen/quote_label_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/quote_label_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title_size</item>

    </style>

    <style name="Theme.SemiColon.Quotes.NoData">

        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_display_2_size</item>
        <item name="android:textColor">@color/colorTextPlaceholder</item>

    </style>

    <style name="Theme.SemiColon.Quotes.Text">

        <item name="android:paddingTop">@dimen/quote_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/quote_items_padding_between</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_title_size</item>

    </style>

    <style name="Theme.SemiColon.Widget" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.SemiColon.Widget.FreshInfo">

        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/widget_fresh_info_padding</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textSize">@dimen/text_caption_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.SemiColon.Widget.Author">

        <item name="android:padding">@dimen/widget_author_padding</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="Theme.SemiColon.Widget.Text">

        <item name="android:padding">@dimen/widget_quote_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_caption_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Empty style to have the parent category -->
    <style name="Theme.SemiColon.AddRepo"/>

    <style name="Theme.SemiColon.AddRepo.CardNest">

        <item name="android:paddingTop">@dimen/addrepo_cardnest_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/addrepo_cardnest_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/addrepo_cardnest_padding_horiziontal</item>
        <item name="android:paddingRight">@dimen/addrepo_cardnest_padding_horiziontal</item>

    </style>

    <style name="Theme.SemiColon.AddRepo.EditText">

        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="Theme.SemiColon.AddRepo.Explanation">

        <item name="android:paddingBottom">@dimen/addrepo_card_explanation_padding_bottom</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>

    </style>

    <style name="Theme.SemiColon.AddRepo.InfoFrame">

        <item name="android:padding">@dimen/addrepo_card_frame_padding</item>

    </style>

    <style name="Theme.SemiColon.AddRepo.Label">

        <item name="android:paddingTop">@dimen/addrepo_card_label_padding_top</item>
        <item name="android:textSize">@dimen/text_caption_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.SemiColon.AddRepo.Result">

        <item name="android:paddingTop">@dimen/addrepo_card_result_padding_top</item>
        <item name="android:paddingBottom">@dimen/addrepo_card_result_padding_bottom</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_caption_size</item>

    </style>

</resources>
